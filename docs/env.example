# Copy this file to the project root as .env and fill in values.
# This file is safe to commit (no secrets here). The real .env is gitignored.

# FPL credentials (use keyring for password; email is safe to store here if you like)
FPL_EMAIL=
FPL_TEAM_ID=

# Optional: web login cookie (leave blank to use browser login or API login via keyring)
FPL_SESSION_COOKIE=
FPL_CSRF_TOKEN=

# Perplexity configuration (API key is sensitive; leave blank if not using)
PERPLEXITY_API_KEY=
PERPLEXITY_MAX_QUERIES=20
PERPLEXITY_MODEL=sonar

# Betfair (optional; leave blank if not using)
BETFAIR_APP_KEY=
BETFAIR_SESSION_TOKEN=

# General
REPORT_OUTPUT_DIR=
FPL_BROWSER=edge
FPL_BROWSER_HEADLESS=true
FORCE_MODEL_RETRAIN=false
